# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           python 1.0

name                py-awscli
version             1.15.76
platforms           darwin
supported_archs     noarch
license             Apache-2
maintainers         {pixilla @pixilla} openmaintainer

description         Universal Command Line Environment for AWS.
long_description    ${description}

homepage            https://aws.amazon.com/cli/
master_sites        pypi:a/awscli
distname            awscli-${version}

checksums           rmd160 890766949cfdeec1db37a3622c58941b62e080d9 \
                    sha256 7d84a54fd241027c01d8bc909cc08adadd7b1e689f1fcb83adaa66506bd44551 \
                    size   614496

python.versions     27 35 36

if {${name} ne ${subport}} {

    PortGroup           select 1.0

    depends_build-append \
                        port:py${python.version}-setuptools
    depends_lib-append \
                        port:py${python.version}-botocore \
                        port:py${python.version}-colorama \
                        port:py${python.version}-docutils \
                        port:py${python.version}-rsa \
                        port:py${python.version}-s3transfer \
                        port:py${python.version}-yaml

    depends_run-append  port:awscli_select

    select.group        awscli
    select.file         ${worksrcpath}/${subport}

    post-extract {
        copy -force ${filespath}/awscli ${worksrcpath}/${subport}
    }

    post-patch {
        reinplace \
            "s,@PYTHON_BRANCH@,${python.branch},g" \
             ${worksrcpath}/${subport}
    }

    set bash_compl_path ${prefix}/etc/bash_completion.d
    set zsh_compl_path ${prefix}/share/zsh/site-functions
    set examples_path ${prefix}/share/${name}

    post-destroot {
        # bash completion
        xinstall -d ${destroot}${bash_compl_path}
        xinstall -m 0644 ${worksrcpath}/bin/aws_bash_completer \
            ${destroot}${bash_compl_path}

        # zsh completion
        xinstall -d ${destroot}${zsh_compl_path}
        xinstall -m 0644 ${worksrcpath}/bin/aws_zsh_completer.sh \
            ${filespath}/_aws \
            ${destroot}${zsh_compl_path}

        # Examples
        xinstall -d ${destroot}${examples_path}
        move ${worksrcpath}/awscli/examples \
            ${destroot}${examples_path}
    }

    livecheck.type      none

    notes "
    Command-line examples have been installed to:
      ${examples_path}/examples
    "
}
